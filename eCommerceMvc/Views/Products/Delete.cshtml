@model eCommerceMvc.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-danger text-center">Delete Product</h1>

<div class="d-flex justify-content-center">
    <div class="card border-danger mb-3 w-75">
        <div class="card-header bg-danger text-white text-center">
            Are you sure you want to delete this product?
        </div>
        <div class="card-body text-center">
            <h5 class="card-title mb-3">@Model.Name</h5>

            <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text">
                <strong>Image:</strong><br />
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail mt-2" style="width: 200px; height: auto;" />
                }
                else
                {
                    <em>No Image</em>
                }
            </p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit"  class="btn btn-danger">Delete</button> 
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
         </div>
    </div>
</div>